@model IEnumerable<WhiteLagoon.Domain.Entities.Amenity>
@{
    ViewData["Title"] = "Villa Amenity Page";
}

<div class="w-100 card border-0 pt-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Villa Amenities list</h1>
            </div>
        </div>

    </div>
</div>
<div class="card-body border p-4">
    <div class="row pb-3">
        <div class="col-6 offset-6 text-end">
            <a class="btn btn-secondary" asp-controller="Amenity" asp-action="Create"><i class="bi bi-plus-circle"></i> Add New Amenity</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Villa Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var amenity in Model)
            {
                <tr>
                    <td>
                        @amenity.Name
                    </td>
                    <td>
                        @amenity.Villa?.Name
                    </td>
                    <td>
                        @amenity.Description
                    </td>
                    <td>
                        <div class="w-80 btn-group" role="group">
                            <a asp-controller="Amenity" asp-action="Update" asp-route-id="@amenity.Id"
                               class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Amenity" asp-action="Delete" asp-route-id="@amenity.Id"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
