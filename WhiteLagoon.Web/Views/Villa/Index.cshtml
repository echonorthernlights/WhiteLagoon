@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>
@{
    ViewData["Title"] = "Villa Page";
}

<div class="w-100 card border-0 pt-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white py-2">Villa list</h1>
            </div>
        </div>
        
    </div>
</div>
<div class="card-body border p-4">
    <div class="row pb-3">
        <div class="col-6 offset-6 text-end">
            <a class="btn btn-secondary" asp-controller="Villa" asp-action="Create"><i class="bi bi-plus-circle"></i> Add New Villa</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Sqft
                </th>
                <th>
                    Occupancy
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>
                        @villa.Name
                    </td>
                    <td>
                        @villa.Price
                    </td>
                    <td>
                        @villa.Sqft
                    </td>
                    <td>
                        @villa.Occupancy
                    </td>
                    <td>
                        <div class="w-80 btn-group" role="group">
                            <a asp-controller="Villa" asp-action="Update" 
                               class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Villa" asp-action="Details" asp-route-id="@villa.Id"
                               class="btn btn-warning mx-2">
                                <i class="bi bi-list"></i> Details
                            </a>
                            <a asp-controller="Villa" asp-action="Delete" asp-route-id="@villa.Id"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
